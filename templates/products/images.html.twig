{% extends 'base.html.twig' %}

{% block title %}Ürün Resimleri{% endblock %}

{% block body %}


   <div class="flex w-full justify-between items-center mt-4 mb-5">
        <div>
            <a href="{{path('app_products_edit', {'id': app.request.attributes.get('_route_params').id})}}">
            <i class="fa-solid fa-left-long text-white cursor-pointer" style="font-size:30px" ></i> </a>
        </div>

         <div class="flex-row space-x-3">
       
         <a href="{{path('app_product_add_image',{id: app.request.attributes.get('_route_params').id})}}">
            <i class="fa-solid fa-circle-plus  text-3xl text-white"></i>
         </a>
         </div>

    </div>  
     {% if images|length == 0 %}
<div class="flex p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
  <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
  <span class="sr-only">Info</span>
  <div>
    <span class="font-medium">Uyarı!</span> Henüz resim eklenmemiş.
  </div>
</div>
{% endif %}
 <div class="grid grid-cols-6 md:grid-cols-4 gap-6">

 


 {% for image in images %}
 
<div class=" bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
    <a href="">
        <img class="rounded-t-lg w-full" src="{{asset('uploads/images/' ~ image.getImageName()) }}" alt="">
    </a>
    <div class="p-5">
   
        <a href="{{path('app_product_images_delete', {id: image.id})}}" type="button" class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 w-full">Sil</a>

    </div>
</div>
 {% endfor %}
    


  </div>


{% endblock %}
